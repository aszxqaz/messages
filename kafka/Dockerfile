FROM confluentinc/cp-kafka:7.3.2

ENV KAFKA_ADVERTISED_LISTENERS=INTERNAL://a_kafka:29092
ENV KAFKA_AUTO_CREATE_TOPICS_ENABLE=true
ENV KAFKA_INTER_BROKER_LISTENER_NAME=INTERNAL
ENV KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=INTERNAL:PLAINTEXT
ENV KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
ENV KAFKA_ZOOKEEPER_CONNECT=a_zookeeper:2181
ENV PORT=29092

EXPOSE 9092 29092 9999